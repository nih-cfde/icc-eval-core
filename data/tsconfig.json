{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noErrorTruncation": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,

    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true
  },
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["*", "*/*"]
}
